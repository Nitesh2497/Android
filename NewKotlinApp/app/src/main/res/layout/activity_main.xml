<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etVar1"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="265dp"
            android:layout_marginBottom="59dp" app:layout_constraintBottom_toTopOf="@+id/etVar2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etVar2"
            app:layout_constraintStart_toStartOf="@+id/etVar1" app:layout_constraintTop_toBottomOf="@+id/etVar1"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/btnAdd"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnAdd" app:layout_constraintTop_toBottomOf="@+id/etVar2"
            android:layout_marginBottom="39dp" app:layout_constraintBottom_toTopOf="@+id/tvResult"/>
    <TextView
            android:text="0"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvResult"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/btnAdd"
            android:layout_marginBottom="142dp"/>
</android.support.constraint.ConstraintLayout>